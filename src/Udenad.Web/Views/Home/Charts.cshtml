@{
    ViewData["Title"] = "Diagrammer";
}

<div class="row justify-content-md-center fullscreen">
    <svg width="960" height="500" id="chart-progress"></svg>
</div>

<div class="row justify-content-md-center fullscreen">
    <svg width="960" height="500" id="chart-forecast"></svg>
</div>

<div class="row justify-content-md-center fullscreen">
    <svg width="960" height="500" id="chart-repetitions"></svg>
</div>

@section scripts {
    <script src="https://d3js.org/d3.v4.min.js"></script>
    <script type="text/javascript" src="~/js/home-chart-progress.js"></script>
    <script type="text/javascript" src="~/js/home-chart-forecast.js"></script>
    <script type="text/javascript" src="~/js/home-chart-repetitions.js"></script>
    <script>
        charts.progress.render("counts", "#chart-progress");
        charts.forecast.render("forecast", "#chart-forecast");
        charts.repetitions.render("repetitions", "#chart-repetitions");
    </script>
}
